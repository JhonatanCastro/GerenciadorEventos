<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Funcamp - Acesso</title>

    @Styles.Render("~/Content/fonts")
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")
    <style>
        h1 {
            text-shadow: none;
        }
    </style>
</head>
<body>
    <div class="container-fluid">

        <div class="row topo-margin">
            <div class="col-md-4">
            </div>
            <div class="col-md-4 funcPlanoFundoEsquerdo jumbotron">
                <h1>@ViewData["titulo"]</h1>
                <p>@ViewData["mensagem"]</p>

                <br />
                <br />

                <p style="text-align:right;">
                    @Html.ActionLink("Voltar ao Login", "Logout", "Identificacao", new { CodigoSistema = @ViewData["sistema"] }, new { @class = "btn btn-primary btn-lg" })
                </p>
            </div>
            <div class="col-md-4">
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 rodape">
                FUNCAMP - Fundação de Desenvolvimento da UNICAMP
            </div>
        </div>

    </div>
</body>
</html>



